{
  "name": "securo-backend",
  "version": "1.0.0",
  "description": "Node.js + MongoDB backend for securo test",
  "main": "dist/index.ts",
  "scripts": {
    "start": "tsc --build && node dist/index.js --no-daemon",
    "compile": "tsc --build",
    "compile:watch": "tsc --build --watch",
    "pre:dev": "cross-env NODE_ENV=development nodemon dist/index.js",
    "dev": "concurrently --kill-others \"yarn compile:watch\" \"yarn pre:dev\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Eric Lee",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "mongoose": "^6.5.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.4",
    "concurrently": "^7.3.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "winston": "^3.8.1"
  }
}
